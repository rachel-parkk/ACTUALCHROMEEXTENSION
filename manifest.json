{
    "manifest_version": 2,
    "name": "Countdown Timer and Link Blocker",
    "version": "1.1",
    "description": "Start a countdown in the background.",
    "permissions": [ "tabs",
    "webRequest",
    "webRequestBlocking",
    "webNavigation",
    "storage",
    "activeTab",
    "*://*/*"],
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
    "browser_action": {
      "default_popup": "popup.html"
    }
  }
  
